{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build-backend",
			"type": "shell",
			"command": "dotnet build src/backend/DbMaker.sln -c Debug",
			"isBackground": false,
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "run-backend",
			"type": "shell",
			"command": "dotnet run --project src/backend/DbMaker.API/DbMaker.API.csproj",
			"isBackground": true,
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "generate-api-client",
			"type": "shell",
			"command": "nswag run nswag.json",
			"isBackground": false,
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"dependsOn": "build-backend"
		}
	]
}