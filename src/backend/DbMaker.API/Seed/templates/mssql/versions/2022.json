{
  "version": "2022",
  "dockerImage": "mcr.microsoft.com/mssql/server:2022-latest",
  "connectionStringTemplate": "Server=localhost,{HOST_PORT};Database={MSSQL_DATABASE};User Id=sa;Password={MSSQL_SA_PASSWORD};TrustServerCertificate=true",
  "ports": [{ "containerPort": 1433, "protocol": "tcp" }],
  "volumes": [],
  "defaultEnvironment": {
    "ACCEPT_EULA": "Y",
    "MSSQL_SA_PASSWORD": "YourStrong!Passw0rd",
    "MSSQL_DATABASE": "appdb"
  },
  "defaultConfiguration": {},
  "healthcheck": {
    "test": ["CMD", "/opt/mssql-tools18/bin/sqlcmd", "-S", "localhost,{HOST_PORT}", "-U", "sa", "-P", "${MSSQL_SA_PASSWORD}", "-Q", "SELECT 1"],
    "interval": "30s",
    "timeout": "10s",
    "retries": 3,
    "startPeriod": "20s"
  }
}
